    , marlowe-runtime
    , marlowe-chain-sync
    , network
    , typed-protocols
    , optparse-applicative
    , stm
    , text
    , wl-pprint
  ghc-options: -threaded

executable marlowe-tx
  import: lang
  hs-source-dirs:   marlowe-tx
  main-is: Main.hs
  other-modules:
    Paths_marlowe_runtime
  autogen-modules:
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , ansi-terminal
    , async
    , base16
    , cardano-api
    , containers
    , marlowe
    , marlowe-protocols
    , marlowe-runtime
    , marlowe-chain-sync
    , network
    , typed-protocols
    , optparse-applicative
    , stm
    , text
    , wl-pprint
  ghc-options: -threaded

