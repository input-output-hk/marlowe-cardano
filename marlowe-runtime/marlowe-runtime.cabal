  import: lang
  hs-source-dirs:   marlowe-history
  main-is: Main.hs
  other-modules:
    Paths_marlowe_runtime
  autogen-modules:
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , ansi-terminal
    , async
