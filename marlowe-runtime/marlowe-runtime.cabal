  build-depends:
      base >= 4.9 && < 5
    , async
    , bytestring
    , cardano-api
    , containers
    , hspec
    , marlowe
    , marlowe-chain-sync
    , marlowe-protocols
    , marlowe-protocols-test
    , marlowe-runtime
    , plutus-tx
    , plutus-ledger-api
    , QuickCheck
    , some
    , stm
    , tasty
    , tasty-hunit
    , tasty-quickcheck
    , time
    , transformers
